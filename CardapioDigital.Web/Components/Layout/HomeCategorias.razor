@using CardapioDigital.Application.Dto.Response
<div class="container">
    <div class="row g-4">
        @foreach (var categoria in categorias.Take(3))
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="card-img-top position-relative" style="height: 200px; background: url('https://thumbs.dreamstime.com/b/big-pizza-cheese-tomatoes-white-isolated-background-eps-file-available-97801812.jpg') no-repeat center center; background-size: cover;">
                        <div class="badge bg-primary text-white position-absolute top-0 start-0 m-3 py-2 px-3 shadow-sm rounded">Popular</div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark text-center">@categoria.NomeCategoria</h5>
                        <p class="card-text text-muted text-center">Descubra os melhores pratos desta categoria e aproveite momentos deliciosos.</p>
                        <div class="d-flex justify-content-between mt-auto">
                            <div class="d-flex align-items-center">
                                <img src="https://github.com/twbs.png" alt="Bootstrap" width="32" height="32" class="rounded-circle me-2">
                                <span class="text-muted small">Admin</span>
                            </div>
                            <span class="badge bg-secondary text-white p-2 small">Novidade</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code {
    [Parameter]
    public IEnumerable<CategoriaResponseDto>? categorias {get; set;}
}
